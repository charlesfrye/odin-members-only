<!doctype html>
  <%- include('partials/head.ejs') %>
  <body class="formBody">
    <div class="w-full max-w-xs">
      <form method="post" action="/signup" class="fieldForm">
          <input
            type="text"
            id="username"
            name="username"
            placeholder="username"
            class="textField"
          />
          <input
            type="password"
            id="password"
            name="password"
            placeholder="password"
            class="textField"
          />
          <input
            type="password"
            id="confirmPassword"
            name="confirmPassword"
            placeholder="confirm password"
            class="textField"
          />
        <div class="flex items-center justify-center w-full">
          <button class="btn text-2xl" type="submit">
            sign up
          </button>
        </div>
      </form>
    </div>
    <% if (locals.error) { %>
      <%- include('partials/error.ejs', {error: error}) %>
    <% } %>
</body>
</html>
